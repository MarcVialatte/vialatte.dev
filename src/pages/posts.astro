---
import PageHeading from "../components/heading.astro";
import PostsLoop from "../components/posts-loop.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Mes Posts">
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <PageHeading
      title="Mes Posts"
      description="Découvrez mes réflexions sur la vie et la technologie dans mes derniers articles, mêlant introspection et innovation."
    />

    <div class="z-50 flex flex-col items-stretch w-full gap-5 my-8">
      <PostsLoop count="999" />
    </div>
  </section>
</Layout>